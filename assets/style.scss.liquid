.product-photo-container {
  @extend .grid-margins;
}

/* Quickly hiding default variant drop-down when JavaScript is enabled */
/* See this: http://www.learningjquery.com/2008/10/1-way-to-avoid-the-flash-of-unstyled-content/ */
.js #product-select { display: none; }

/* Product option wrapper. */
.selector-wrapper {
  @extend .paragraph-margins;
}

.sort-by {
  margin-top: .25rem;
}


/*
   Swatches Styles
*/

{% assign width = '35px' %}
{% assign height = '35px' %}
.swatch {
  margin:1em 0;
}
/* Label */
.swatch .header {
  margin: 0.5em 0;
  display: block;
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 1px;
  font-size: 14px;
  margin-bottom: 11px;
  span{
    font-weight:400;
    padding-left:5px;
    letter-spacing: 0px;
    text-transform: capitalize;
  }
}
/* Hide radio buttons.*/
.swatch input {
  display:none;
}
.swatch label {
  /* Rounded corners */
  -webkit-border-radius: {{height}};
  -moz-border-radius: {{height}};
  border-radius: {{height}};
  /* To give width and height */
  float:left;
  font-weight: 700;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  /* Color swatches contain no text so they need to have a width. */
  min-width:{{ width }} !important;
  height:{{ height }} !important;
  /* No extra spacing between them */
  margin:0;
  /* The border when the button is not selected */
